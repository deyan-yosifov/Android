package com.dipiuay.fallingrocks;

import android.app.AlertDialog;
import android.content.Context;
import android.content.DialogInterface;

public class MessageBoxHelper {
	public static void Alert(Context context, String text, String header,
			DialogInterface.OnClickListener yesClickListener, DialogInterface.OnClickListener noClickListener){
		new AlertDialog.Builder(context)
        .setTitle("Falling Games Alert")
        .setMessage("Are you sure you want to play this stupid game :)?")
        .setPositiveButton(android.R.string.yes, new DialogInterface.OnClickListener() {
            public void onClick(DialogInterface dialog, int which) { 
                // continue with delete
            }
         })
        .setNegativeButton(android.R.string.no, new DialogInterface.OnClickListener() {
            public void onClick(DialogInterface dialog, int which) { 
                // do nothing
            }
         })
        .setIcon(android.R.drawable.ic_dialog_alert)
         .show();    	
	}
}
