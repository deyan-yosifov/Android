package com.dipiuay.bouncingballgame;

import android.content.Context;
import android.graphics.Canvas;
import android.graphics.Color;
import android.graphics.Matrix;
import android.graphics.Paint;
import android.graphics.RectF;
import android.view.Surface;
import android.view.View;

public class PlaygroundView extends View {

	private static final Logger logger = new Logger("PlaygroundView");
	private final Paint paint;
	private int width;
	private int height;
	
	public PlaygroundView(Context context) {
		super(context);
		
		this.paint = new Paint();
	}

	@Override
	protected void onDraw(Canvas canvas) {
		logger.log("onDraw");

		this.width = canvas.getWidth();
		this.height = canvas.getHeight();
		float centerX = this.width / 2.0f;
		float centerY = this.height / 2.0f;
		logger.log("Canvas size: (" + this.width + "; " + this.height + ")");
		
		int rotation = GameApplication.getRotation();
		float scale = 1;
		float angle = 0;
		Game game = GameApplication.getGame();
		float gameCenterX = game.width() / 2.0f;
		float gameCenterY = game.height() / 2.0f;
		
		switch(rotation){
			case Surface.ROTATION_0:
				angle = 0;
				scale = Math.min(this.width / game.width(), this.height / game.height());
				break;
			case Surface.ROTATION_90:
				angle = 90;
				scale = Math.min(this.width / game.height(), this.height / game.width());
				break;
			case Surface.ROTATION_180:
				angle = 180;
				scale = Math.min(this.width / game.width(), this.height / game.height());
				break;
			case Surface.ROTATION_270:
				angle = 270;
				scale = Math.min(this.width / game.height(), this.height / game.width());
				break;
		}
		
		//canvas.drawColor(Color.CYAN);
		canvas.scale(0.5f, 0.5f, centerX, centerY);
		canvas.translate(-centerX, -centerY);
		canvas.rotate(angle, centerX, centerY);
//		canvas.scale(scale, scale, gameCenterX, gameCenterY);
//		canvas.rotate(angle, gameCenterX, gameCenterY);
//		canvas.translate(centerX - gameCenterX, centerY - gameCenterY);
		this.drawRectangleBounds(canvas, this.getRectangle(canvas));
		this.drawCircle(canvas, game.ball);
		this.drawCircle(canvas, game.target);
		
		//this.invalidate();
	}
	
	private RectF getRectangle(Canvas canvas){
		return new RectF(0, 0, canvas.getWidth(), canvas.getHeight());
	}
	
	private void drawCircle(Canvas canvas, ICircleObject circle){
		RectF rect = new RectF();
	}
	
	private void drawRectangleBounds(Canvas canvas, RectF rect){
		
		this.paint.setColor(Color.MAGENTA);
		this.paint.setStyle(Paint.Style.STROKE);
		this.paint.setStrokeWidth(50);
		canvas.drawRect(rect, this.paint);
		
		this.paint.setColor(Color.RED);
		this.paint.setStyle(Paint.Style.FILL);
		this.paint.setStrokeWidth(0);
		canvas.drawOval(rect,  this.paint);		
	}

	
}
